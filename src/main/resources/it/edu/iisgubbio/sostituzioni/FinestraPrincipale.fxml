<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.edu.iisgubbio.sostituzioni.FinestraPrincipale" stylesheets="@stile.css">
   <center>
      <GridPane hgap="5.0" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" styleClass="pannelloPrincipale" vgap="5.0">
        <columnConstraints>
          <ColumnConstraints minWidth="5.0" />
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="-Infinity" />
          <ColumnConstraints hgrow="SOMETIMES" maxWidth="1.7976931348623157E308" minWidth="0.0" />
        </columnConstraints>
         <children>
            <Label alignment="BOTTOM_CENTER" contentDisplay="BOTTOM" text="Seleziona giorno"  GridPane.halignment="CENTER" GridPane.rowIndex="4">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Label>
             <Button mnemonicParsing="false" onAction="#gestioneCercaDocenteDisponibile" text="Cerca docenti disponibili" GridPane.halignment="CENTER" GridPane.rowIndex="12" GridPane.valignment="CENTER" />
            <Label alignment="BOTTOM_CENTER" contentDisplay="BOTTOM" text="Immettere la classe" GridPane.halignment="CENTER" GridPane.rowIndex="10">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Label>
            <ImageView fitWidth="150.0" pickOnBounds="true" preserveRatio="true" GridPane.halignment="CENTER" GridPane.rowSpan="2" GridPane.valignment="CENTER">
               <image>
                  <Image url="@logo_iis_cassata_gattapone.png" />
               </image>
               <effect>
                  <Reflection fraction="0.48" topOpacity="0.25" />
               </effect>
            </ImageView>
            <Label fx:id="txtOra" alignment="BOTTOM_CENTER" contentDisplay="BOTTOM" text="Immettere ora " GridPane.halignment="CENTER" GridPane.rowIndex="8" GridPane.valignment="CENTER">
               <padding>
                  <Insets top="20.0" />
               </padding>
            </Label>
            <ListView fx:id="listaSostituzioniPossibili" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="200.0" GridPane.columnIndex="2" GridPane.rowIndex="2" GridPane.rowSpan="6">
               <GridPane.margin>
                  <Insets />
               </GridPane.margin>
            </ListView>
            <DatePicker fx:id="data" onAction="#gestioneSelezioneDataEDocente" GridPane.halignment="CENTER" GridPane.rowIndex="5" GridPane.valignment="TOP">
               <effect>
                  <Reflection fraction="0.57" />
               </effect>
               <GridPane.margin>
                  <Insets bottom="20.0" />
               </GridPane.margin>
            </DatePicker>
            <Label alignment="CENTER" contentDisplay="BOTTOM" text="Lista docenti disponibili" GridPane.columnIndex="2" GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.valignment="BOTTOM">
               <GridPane.margin>
                  <Insets />
               </GridPane.margin>
            </Label>
            <ComboBox fx:id="cmbOra" promptText="Ore" GridPane.halignment="CENTER" GridPane.rowIndex="9" GridPane.valignment="TOP">
               <effect>
                  <Reflection bottomOpacity="0.04" fraction="0.64" topOpacity="0.41" />
               </effect>
               <GridPane.margin>
                  <Insets bottom="20.0" />
               </GridPane.margin>
            </ComboBox>
            <ComboBox fx:id="cmbClasse" promptText="Classi" GridPane.halignment="CENTER" GridPane.rowIndex="11" GridPane.valignment="TOP">
               <effect>
                  <Reflection bottomOpacity="0.17" fraction="0.44" topOpacity="0.44" />
               </effect>
               <GridPane.margin>
                  <Insets bottom="20.0" />
               </GridPane.margin>
            </ComboBox>
            <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#gestioneSalva" text="Salva" GridPane.columnIndex="2" GridPane.halignment="CENTER" GridPane.rowIndex="12" />
            <ComboBox fx:id="nomeProf" onAction="#gestioneSelezioneDataEDocente" prefWidth="185.0" promptText="Professore" GridPane.halignment="CENTER" GridPane.rowIndex="3" GridPane.valignment="TOP" />
            <Label text="Selezionare Prof." GridPane.halignment="CENTER" GridPane.rowIndex="2" GridPane.valignment="BOTTOM">
               <padding>
                  <Insets top="20.0" />
               </padding>
            </Label>
            <Button mnemonicParsing="false" onAction="#gestioneInformazioniDocente" text="i" GridPane.columnIndex="1" GridPane.rowIndex="3" GridPane.valignment="TOP">
               <GridPane.margin>
                  <Insets right="20.0" />
               </GridPane.margin></Button>
            <ImageView fx:id="ivAttenzione" fitWidth="50.0" onMouseClicked="#mostraProblemi" pickOnBounds="true" preserveRatio="true" GridPane.columnIndex="2" GridPane.halignment="RIGHT">
               <image>
                  <Image url="@attenzione.png" />
               </image>
            </ImageView>
            <ListView fx:id="listaOreLezione" prefHeight="200.0" prefWidth="250.0" GridPane.rowIndex="7" />
            <Label fx:id="lDescrizioneOreLezione" alignment="BOTTOM_CENTER" text="ore da sostituire" GridPane.halignment="CENTER" GridPane.rowIndex="6" />
            <WebView fx:id="ww" prefHeight="250.0" prefWidth="450.0" GridPane.columnIndex="2" GridPane.rowIndex="8" GridPane.rowSpan="4" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
         <rowConstraints>
            <RowConstraints minHeight="20.0" />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints maxHeight="1.7976931348623157E308" vgrow="ALWAYS" />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
         </rowConstraints>
      </GridPane>
   </center>
   <top>
      <MenuBar prefHeight="21.0" prefWidth="494.0" BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="Opzioni">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#finestraPreferenze" text="Preferenze..." />
                <MenuItem mnemonicParsing="false" onAction="#finestraInfoSoftware" text="Informazioni" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Problemi">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#mostraProblemi" text="mostra" />
            </items>
          </Menu>
            <Menu mnemonicParsing="false" text="Strumenti">
              <items>
                <MenuItem mnemonicParsing="false" onAction="#gestioneStatistiche" text="Statistiche" />
              </items>
            </Menu>
        </menus>
         <BorderPane.margin>
            <Insets right="5.0" />
         </BorderPane.margin>
      </MenuBar>
   </top>
</BorderPane>
